# Application
APP_NAME=kakaotalk-chatbot
ENVIRONMENT=development
DEBUG=True
HOST=0.0.0.0
PORT=8000

# Database
DB_HOST=db
DB_PORT=3306
DB_NAME=chatbot
DB_USER=user
DB_PASSWORD=password
DB_ROOT_PASSWORD=rootpassword

# MySQL Connection String
DATABASE_URL=mysql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}

# API Keys (카카오톡 API 키는 실제 사용 시 추가 필요)
# KAKAO_API_KEY=your_kakao_api_key

# CORS Settings
CORS_ORIGINS=["*"]
CORS_METHODS=["*"]
CORS_HEADERS=["*"]

# Security
SECRET_KEY=your-secret-key-here  # 실제 운영 환경에서는 반드시 변경 필요 